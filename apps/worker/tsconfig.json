{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "../../packages/*": ["../../packages/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "../../packages/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
